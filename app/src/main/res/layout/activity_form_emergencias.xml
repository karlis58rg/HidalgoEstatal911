<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textToll"
    tools:context=".FormEmergencias">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp">

        <RelativeLayout
            android:id="@+id/bodyFormEmergencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnEmergencias"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="110dp"
                android:background="@drawable/btn_emergencia" />




            <ImageButton
                android:id="@+id/btnTransporteSeguro"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_below="@+id/btnEmergencias"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="70dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="100dp"
                android:scaleType="fitXY"
                android:background="@drawable/destinoseguronegro" />

            <ImageButton
                android:id="@+id/btn911"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_below="@+id/btnTransporteSeguro"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="70dp"
                android:layout_marginStart="110dp"
                android:layout_marginEnd="110dp"
                android:background="@drawable/btn_911"
                android:scaleType="fitXY"/>


            <ImageButton
                android:id="@+id/btnEmergenciasRosa"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="110dp"
                android:background="@drawable/corporacionesrosa"/>
            <TextView
                android:id="@+id/lblNotificarEmergenciasRosa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:text="Informar Emergencia"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_below="@id/btnEmergenciasRosa"/>

            <ImageButton
                android:id="@+id/btnTransporteSeguroRosa"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_below="@+id/btnEmergenciasRosa"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="70dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/destinosegurorosa"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/lblTransporteSeguroRosa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:text="Destino Seguro"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_below="@id/btnTransporteSeguroRosa"/>

            <ImageButton
                android:id="@+id/btn911Rosa"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_below="@+id/btnTransporteSeguroRosa"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="70dp"
                android:layout_marginStart="110dp"
                android:layout_marginEnd="110dp"
                android:background="@drawable/telefonorosa"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/lblLlamada911Rosa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:text="Llamada al 911"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_below="@id/btn911Rosa"
                android:layout_marginBottom="50dp" />

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>