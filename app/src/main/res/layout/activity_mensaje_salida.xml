<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MensajeSalida">

    <ImageView
        android:id="@+id/imgHeaderCyHReporteSalida"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_barracasayh_911" />

    <ImageView
        android:id="@+id/lblReporteEnviado"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@id/imgHeaderCyHReporteSalida"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/ic_reporteok"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/lblReporteEnviadoPaloma"
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:layout_below="@+id/lblFolio"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_palomaverde_911" />

    <ImageView
        android:id="@+id/lblRecuadro"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/lblReporteEnviadoPaloma"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_recibidook"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/lblFolio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblReporteEnviado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="**"
        android:textAlignment="center"
        android:textColor="@color/txtColor"
        android:textSize="17dp" />

</RelativeLayout>