<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textToll"
    tools:context=".ui.ServPublicos.ServPublicos">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <me.biubiubiu.justifytext.library.JustifyTextView
            android:id="@+id/lblSerPublicos"
            android:layout_width="241dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:text="Una emergencia de Servicios Públicos es aquello vinculado a toda la comunidad y que, por lo tanto, suele ser gestionado o administrado por el Estado.
            \n
            \nSe puede presentar en.
            \n"
            android:textSize="16dp">
        </me.biubiubiu.justifytext.library.JustifyTextView>
        <TextView
            android:id="@+id/lblInfra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="50dp"
            android:text="Infraestructura:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/lblSerPublicos"/>

        <me.biubiubiu.justifytext.library.JustifyTextView
            android:id="@+id/lblInfra1"
            android:layout_width="241dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:text="Caída de barda, de poste, falla alumbrado público, falla de semáforo, cables colgando, alcantarilla sin tapa, grava suelta.\n"
            android:textSize="16dp"
            android:layout_below="@id/lblInfra">
        </me.biubiubiu.justifytext.library.JustifyTextView>


    </RelativeLayout>

</FrameLayout>