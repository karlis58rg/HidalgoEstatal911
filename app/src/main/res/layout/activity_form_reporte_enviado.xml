<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".FormReporteEnviado">

    <ImageView
        android:id="@+id/imgHeaderCyHReporte"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_barracasayh_911" />

    <ImageView
        android:id="@+id/lblReporteEnviado"
        android:layout_below="@id/imgHeaderCyHReporte"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_reporteok"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/lblReporteEnviadoPaloma"
        android:layout_below="@id/lblReporteEnviado"
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_palomaverde_911"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/lblRecuadro"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/lblReporteEnviadoPaloma"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_recibidook"
        android:scaleType="fitXY" />

</RelativeLayout>