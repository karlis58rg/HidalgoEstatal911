<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".FormSensorIngresaPlaca">

    <ImageView
        android:id="@+id/imgHeaderCyHServ"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_barracasayh_911" />

    <ImageButton
        android:id="@+id/imgHomeServ"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_btncasa_911" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp">

        <RelativeLayout
            android:id="@+id/bodyFormEmergencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblManualSensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:text=""
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/lblInstrucciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:text="Introduce las placas del vehículo en el que viajas"
                android:textAlignment="center"
                android:textSize="20dp" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifMano"
                android:layout_width="137dp"
                android:layout_height="133dp"
                android:layout_below="@id/lblManualSensor"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginStart="130dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="130dp"
                android:layout_marginRight="130dp"
                android:scaleType="fitXY"
                android:src="@drawable/mano_animada" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifSirena"
                android:layout_width="137dp"
                android:layout_height="100dp"
                android:layout_below="@id/lblManualSensor"
                android:layout_marginTop="30dp"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:src="@drawable/patrulla" />

            <ImageButton
                android:id="@+id/impPaloma"
                android:layout_width="230dp"
                android:layout_height="140dp"
                android:layout_below="@id/lblManualSensor"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="98dp"
                android:layout_marginLeft="98dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="102dp"
                android:layout_marginRight="102dp"
                android:background="@drawable/ic_palomaverde_911"
                android:scaleType="fitXY" />



            <EditText
                android:id="@+id/txtIngresaPlacaSensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblManualSensor"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="65dp"
                android:layout_marginEnd="50dp"
                android:hint="Placas: HY9012"
                android:inputType="textCapCharacters"
                android:maxLength="8"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/txtColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lblPlacaIngresadaSensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblManualSensor"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="55dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="45dp"
                android:layout_marginRight="45dp"
                android:textAlignment="center"
                android:textSize="22dp" />
            <Button
                android:id="@+id/btnIniciar"
                android:layout_width="150dp"
                android:layout_height="38dp"
                android:layout_below="@id/lblManualSensor"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="120dp"
                android:layout_marginLeft="134dp"
                android:layout_marginTop="160dp"
                android:layout_marginEnd="120dp"
                android:layout_marginRight="134dp"
                android:background="@drawable/boton_redondo"
                android:text="Enviar"
                android:textColor="@color/textToll" />
            <TextView
                android:id="@+id/lblRandom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblUbicacion"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                android:textSize="15dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/lblEmergencia"
                android:layout_width="392dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblManualSensor"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="31dp"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="200dp"
                android:layout_marginEnd="34dp"
                android:layout_marginRight="34dp"
                android:text="En caso de una emergencia durante tu trayecto:"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/lblAgita"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@id/lblEmergencia"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="-1dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/ic_bndverdeagitacelular"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/lblDeten"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="130dp"
                android:layout_marginRight="0dp"
                android:layout_below="@id/gifSirena"
                android:background="@drawable/ic_banda_roja_alerta_sileciosa_v02"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/lblFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblManualSensor"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="410dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:text="Al finalizar tu viaje, oprime el botón:"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/btnDetener"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblFin"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="134dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="90dp"
                android:layout_marginRight="134dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/boton_redondo"
                android:text="Detener Servicio"
                android:textColor="@color/textToll" />
            <TextView
                android:id="@+id/lblCoordenadasSensorPlaca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coordenadas"
                android:visibility="gone"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>