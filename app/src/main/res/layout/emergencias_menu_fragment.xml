<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp">

        <RelativeLayout
            android:id="@+id/bodyFormEmergencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EAEAEA"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnEmergencias"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_rojo911conbarra" />

            <ImageView
                android:id="@+id/btnTransporteSeguro"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/btnEmergencias"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_botonemergenciamultimediabarra_5" />

            <ImageView
                android:id="@+id/btn911"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/btnTransporteSeguro"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_botondestinosegurobarrablanca_6" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>