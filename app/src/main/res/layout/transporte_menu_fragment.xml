<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.MenuTransporte.TransporteMenu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp">

        <RelativeLayout
            android:id="@+id/bodyDestinoSeguroMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img911"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/ic_botondestinoseguro_7"
                android:textSize="20sp"></ImageView>


            <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/lblLlamadaal911"
                android:layout_width="350dp"
                android:layout_height="310dp"
                android:layout_below="@id/img911"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="30dp"
                android:text="Tiene como objetivo activar una alerta silenciosa en caso de estar en peligro tu vida y no poder comunicarte de manera verbal, por lo que, previo a abordar un vehículo de servicio público, deberás capturar la matrícula.\n
                \nPara activar la emergencia deberás agitar el teléfono móvil y con ello será enviada una alerta al C5i Hidalgo con la ubicación en tiempo real del dispositivo.\n
                \nLa alerta estará activa hasta que el usuario la concluya de manera manual, o toda vez que tras la emergencia sea desactivada desde el C5i Hidalgo.\n"
                android:textSize="16dp"></me.biubiubiu.justifytext.library.JustifyTextView>

        </RelativeLayout>
    </ScrollView>

</FrameLayout>